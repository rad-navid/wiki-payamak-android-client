<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_second_bg"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/contentEditBoxEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_style"
        android:minHeight="120dp"
        android:gravity="right"
        android:padding="8dp"
        android:inputType="textMultiLine" >
    </EditText>

    <EditText
        android:id="@+id/contentCommentBoxEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="right"
        android:background="@drawable/edit_text_style"
        android:hint="توضیحات"
        android:maxLines="4"
        android:minHeight="50dp"
        android:padding="8dp" >
    </EditText>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center" >

        <Button
            android:id="@+id/CancelButton"
            android:layout_width="@dimen/ok_cancel_button_width"
            android:layout_height="@dimen/ok_cancel_button_heigth"
            android:drawableLeft="@drawable/cancel"
            android:text="رد" >
        </Button>

        <Button
            android:id="@+id/OkButton"
            android:layout_width="@dimen/ok_cancel_button_width"
            android:layout_height="@dimen/ok_cancel_button_heigth"
            android:drawableLeft="@drawable/ok"
            android:text="تایید" >
        </Button>
    </LinearLayout>

</LinearLayout>